@{
    ViewBag.Title = "Thanh toán thành công";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section menuHeader{
    @Html.Partial("_MenuPartial")
}

@section content{
    <link href="~/Content/app/payment-success.css" rel="stylesheet" />
}

<div class="container">
    <div class="row payment-success">
        <div class="col-xs-12">
            <h2>Giao dịch thành công</h2>
        </div>

        <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6 success-icon">
