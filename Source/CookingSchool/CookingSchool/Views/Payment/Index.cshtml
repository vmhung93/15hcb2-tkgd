                                    <a href="#"><img src="~/images/banks/PNAB.jpg" /></a>
                                    <a href="#"><img src="~/images/banks/PNVB.jpg" /></a>
                                    <a href="#"><img src="~/images/banks/POCB.jpg" /></a>
                                    <a href="#"><img src="~/images/banks/POCEB.jpg" /></a>
                                    <a href="#"><img src="~/images/banks/PPGB.jpg" /></a>
                                    <a href="#"><img src="~/images/banks/PSCB.jpg" /></a>
                                    <a href="#"><img src="~/images/banks/PSEAB.jpg" /></a>
                                    <a href="#"><img src="~/images/banks/PSGB.jpg" /></a>
                                    <a href="#"><img src="~/images/banks/PSHB.jpg" /></a>
                                    <a href="#"><img src="~/images/banks/PTCB.jpg" /></a>
                                    <a href="#"><img src="~/images/banks/PTPB.jpg" /></a>
                                    <a href="#"><img src="~/images/banks/PVAB.jpg" /></a>
                                    <a href="#"><img src="~/images/banks/PVCB.jpg" /></a>
                                    <a href="#"><img src="~/images/banks/PVIB.jpg" /></a>
                                    <a href="#"><img src="~/images/banks/PVPB.jpg" /></a>
                                    <a href="#"><img src="~/images/banks/PVTB.jpg" /></a>
                                </div>

                                @*Process payment button*@
                                <div class="form-group col-xs-12">
                                    <button class="btn btn-success btn-process-payment">Tiến hành thanh toán</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @*Payment info*@
        <div class="col-sm-4 payment-info">
            <div class="title">
                <h3>Thông tin thanh toán</h3>
            </div>
        </div>
    </div>
</div>