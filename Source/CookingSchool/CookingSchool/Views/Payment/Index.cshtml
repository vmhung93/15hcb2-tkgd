
@{
    ViewBag.Title = "Thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section menuHeader{
    @Html.Partial("_MenuPartial")
}

@section content{
    <link href="~/Content/app/payment.css" rel="stylesheet" />
}

@section scripts {
    <script src="~/Scripts/app/payment.js"></script>
}

<div class="container">
    <div class="row payment">
        @*Payment method*@
        <div class="col-sm-8 payment-method">
            <div class="title">
                <h3>Phương thức thanh toán</h3>
            </div>

            <div class="panel-group" id="method" role="tablist" aria-multiselectable="true">
                @*Credit card*@
                <div class="panel panel-default">
                    <div class="panel-heading" role="tab" id="heading-credit-card">
                        <h4 class="panel-title">
                            <label for="credit-card-radio">
                                <input type="radio" id="credit-card-radio" name="payment-method-radio" value="Credit Card" checked="checked" />
                                <span>Credit Card</span>
                                <a role="button" data-toggle="collapse" data-parent="#method" href="#credit-card" aria-expanded="true" aria-controls="credit-card"></a>
                            </label>
                        </h4>
                    </div>

                    <div id="credit-card" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="heading-credit-card">
                        <div class="panel-body">
                            <div class="form-horizontal">
                                <div class="form-group col-xs-12">
                                    <div class="row">
                                        <div class="col-xs-offset-3 col-xs-9 credit-img">
                                            <img src="~/images/visa.png" class="visa" />
                                            <img src="~/images/master.png" />
                                        </div>
                                    </div>
                                </div>

                                @*Card number*@
                                <div class="form-group col-xs-12">
                                    <div class="row">
                                        <label for="card-number" class="col-xs-3">Số thẻ</label>

                                        <div class="col-xs-9">
                                            <input type="text" class="form-control" id="card-number" placeholder="VD: 4123 4567 8901 2345">
                                        </div>
                                    </div>
                                </div>

                                @*Card owner*@
                                <div class="form-group col-xs-12">
                                    <div class="row">
                                        <label for="card-owner" class="col-xs-3">Tên in trên thẻ</label>

                                        <div class="col-xs-9">
                                            <input type="text" class="form-control" id="card-owner" placeholder="VD: NGUYEN VAN A">
                                        </div>
                                    </div>
                                </div>

                                @*Expire date*@
                                <div class="form-group col-xs-12">
                                    <div class="row">
                                        <label for="expired-date" class="col-xs-3">Ngày hết hạn</label>

                                        <div class="col-xs-9">
                                            <input type="text" class="form-control" id="expired-date" placeholder="MM/YY">
                                        </div>
                                    </div>
                                </div>

                                @*CVV*@
                                <div class="form-group col-xs-12">
                                    <div class="row">
                                        <label for="cvv" class="col-xs-3">Mã bảo mật</label>

                                        <div class="col-xs-9">
                                            <input type="text" class="form-control" id="cvv" placeholder="VD: 123">
                                        </div>
                                    </div>
                                </div>

                                @*Process payment button*@
                                <div class="form-group col-xs-12">
                                    <div class="row">
                                        <div class="col-xs-offset-3 col-xs-9">
                                            <button class="btn btn-success btn-process-payment">Tiến hành thanh toán</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                @*PayPal*@
                <div class="panel panel-default">
                    <div class="panel-heading" role="tab" id="heading-paypal">
                        <h4 class="panel-title">
                            <label for="paypal-radio">
                                <input type="radio" id="paypal-radio" name="payment-method-radio" value="Paypal" />
                                <span>PayPal</span>
                                <a class="collapsed" role="button" data-toggle="collapse" data-parent="#method" href="#paypal" aria-expanded="false" aria-controls="paypal"></a>
                            </label>
                        </h4>
                    </div>

                    <div id="paypal" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading-paypal">
                        <div class="panel-body">
                            <div class="form-horizontal">
                                <div class="form-group col-xs-12">
                                    <div class="row">
                                        <div class="col-xs-offset-3 col-xs-9 paypal-img">
                                            <img src="~/images/paypal.png" />
                                        </div>
                                    </div>
                                </div>

                                @*Card number*@
                                <div class="form-group col-xs-12">
                                    <div class="row">
                                        <label for="paypal-email" class="col-xs-3">Email PayPal</label>

                                        <div class="col-xs-9">
                                            <input type="email" class="form-control" id="paypal-email" placeholder="Địa chỉ email PayPal">
                                        </div>
                                    </div>
                                </div>

                                @*Card owner*@
                                <div class="form-group col-xs-12">
                                    <div class="row">
                                        <label for="paypal-password" class="col-xs-3">Mật khẩu PayPal</label>

                                        <div class="col-xs-9">
                                            <input type="password" class="form-control" id="paypal-password" placeholder="Mật khẩu tài khoản PayPal">
                                        </div>
                                    </div>
                                </div>

                                @*Process payment button*@
                                <div class="form-group col-xs-12">
                                    <div class="row">
                                        <div class="col-xs-offset-3 col-xs-9">
                                            <button class="btn btn-success btn-process-payment">Đăng nhập PayPal</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                @*ATM*@
                <div class="panel panel-default">
                    <div class="panel-heading" role="tab" id="heading-atm">
                        <h4 class="panel-title">
                            <label for="atm-radio">
                                <input type="radio" id="atm-radio" name="payment-method-radio" value="ATM Nội địa" />
                                <span>ATM Nội địa</span>
                                <a class="collapsed" role="button" data-toggle="collapse" data-parent="#method" href="#atm" aria-expanded="false" aria-controls="atm"></a>
                            </label>
                        </h4>
                    </div>

                    <div id="atm" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading-atm">
                        <div class="panel-body atm-img">
