@{
    ViewBag.Title = "Đăng nhập";
}

@section menuHeader {
    @Html.Partial("_MenuPartial")
}

@section content {
    <link href="~/Content/app/sign-in.css" rel="stylesheet" />
}

@section scripts {
    <script src="~/Scripts/app/account.js"></script>
}

<div class="login">
    @*Banner*@
    @Html.Partial("_BannerPartial")

    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-offset-2 col-sm-8 signIn-form">
                <div class="row">
                    <div class="col-sm-offset-4 col-sm-8 col-md-offset-3 col-md-9 text-center title">
                        <h3>Đăng nhập</h3>
                    </div>

                    <form class="col-xs-12 form-horizontal">
                        <div class="form-group">
                            <label for="email" class="col-sm-4 col-md-3 control-label">Email</label>

                            <div class="col-sm-8 col-md-9">
                                <input type="email" class="form-control" id="email" placeholder="Địa chỉ email">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="password" class="col-sm-4 col-md-3 control-label">Mật khẩu</label>

                            <div class="col-sm-8 col-md-9">
                                <input type="password" class="form-control" id="password" placeholder="Mật khẩu">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-4 col-sm-8 col-md-offset-3 col-md-9">
                                <div class="checkbox">
                                    <input class="magic-checkbox" type="checkbox" name="remember-me" id="remember-me">
                                    <label for="remember-me">Tự động đăng nhập lần sau</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-4 col-sm-8 col-md-offset-3 col-md-9">
                                <input type="button" class="btn btn-success btn-signIn" value="Đăng nhập" id="btn-signIn" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>