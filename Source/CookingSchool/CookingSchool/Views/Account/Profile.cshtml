@using CookingSchool.Models
@model LoginViewModel
@{
    ViewBag.Title = "Sign In Cooking School";
}
@section menuHeader{
    @Html.Partial("_MenuPartial")
}

@section content{
    <link href="~/Content/app/userprofile.css" rel="stylesheet" />
}
<div class="login">
    @*Banner*@
    @Html.Partial("_BannerPartial")

    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="row">   
                    <!-- Nav tabs -->
                    <div class="col-xs-2">
                        <div class="thumbnail avatar">
                            <img src="..." alt="...">
                            <div class="caption">
                                <h4>Vu Manh Hung</h4>
                                <p>Student</p>  
                            </div>
                        </div>
                        <ul class="nav nav-tabs nav-stacked" role="tablist">
                            <li role="presentation" class="active"><a href="#public" aria-controls="public" role="tab" data-toggle="tab">Public Information</a></li>
                            <li role="presentation"><a href="#private" aria-controls="private" role="tab" data-toggle="tab">Private</a></li>
                            <li role="presentation"><a href="#avatar" aria-controls="avatar" role="tab" data-toggle="tab">Avatar</a></li>
                            <li role="presentation"><a href="#payment" aria-controls="payment" role="tab" data-toggle="tab">Payment Card</a></li>
                            <li role="presentation"><a href="#notification" aria-controls="notification" role="tab" data-toggle="tab">Notification</a></li>
                        </ul>
                    </div>
                   

                    <!-- Tab panes -->
                    <div class="tab-content col-xs-10 profile-content">
                        <div role="tabpanel" class="tab-pane active" id="public">
                            <div class="profile-title">
                                <h2>Public information</h2>
                                <p>This information display on system website</p>
                            </div>
                            <form class="form-horizontal">
                                <div class="form-group">
                                    <label class="control-label col-sm-2" for="username">User name</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="username" placeholder="User name">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-sm-2" for="displayname">Display name</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="displayname" placeholder="Display name">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-sm-2" for="datejoin">Date join with us</label>
                                    <div class="col-sm-10">
                                        <input type="datetime" class="form-control" id="datejoin" placeholder="Date join with us">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10">
                                        <button type="submit" class="btn btn-default">Thay đổi</button>
                                    </div>
                                </div>
                            </form>

                            <div class="row statistics">
                                <div class="panel panel-success col-xs-3">
                                    <div class="panel-heading"><b>Courses</b></div>
                                    <div class="panel-body"><h2>10</h2></div>
                                </div>

                                <div class="panel panel-info col-xs-3">
                                    <div class="panel-heading"><b>Posts</b></div>
                                    <div class="panel-body"><h2>12</h2></div>
                                </div>

                                <div class="panel panel-warning col-xs-3">
                                    <div class="panel-heading"><b>Comments</b></div>
                                    <div class="panel-body"><h2>15</h2></div>
                                </div>
                            </div>
                            
                        </div>
                        <div role="tabpanel" class="tab-pane" id="private">......</div>
                        <div role="tabpanel" class="tab-pane" id="avatar">.......</div>
                        <div role="tabpanel" class="tab-pane" id="payment">...........</div>
                        <div role="tabpanel" class="tab-pane" id="notification">...........</div>
                    </div>

                </div>
            </div>
            
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}