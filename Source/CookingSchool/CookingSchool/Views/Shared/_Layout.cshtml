<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="~/images/favicon.png">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700,900&amp;subset=vietnamese" rel="stylesheet">

    @if (string.IsNullOrWhiteSpace(ViewBag.Title))
    {
        <title>Cooking Shool</title>
    }
    else
    {
        <title>@ViewBag.Title - Cooking Shool</title>
    }

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/app/common.css" rel="stylesheet" />
    <link href="~/Content/app/header.css" rel="stylesheet" />
    <link href="~/Content/app/footer.css" rel="stylesheet" />

    @*Plugins*@
    @*<link href="~/Content/plugins/plugins.css" rel="stylesheet" />*@
    <link href="~/Content/plugins/teamslide.css" rel="stylesheet" />
    <link href="~/Content/plugins/portfolio.jquery.css" rel="stylesheet" />
    <link href="~/Content/plugins/bootstrap-select/bootstrap-select.min.css" rel="stylesheet" />

    @RenderSection("content", required: false)
</head>
<body>
    @*<div class='preloader'><div class='loaded'>&nbsp;</div></div>*@
    <header>
        @RenderSection("menuHeader", required: false)
    </header>

    <div class="container-fluid body-content">
        @*Body content*@
        <div class="row">
            @RenderBody()
        </div>

        @*Footer*@
        @Html.Partial("_FooterPartial")

        @*<div class="scrollup">
                <a href="#"><i class="fa fa-chevron-up"></i></a>
            </div>*@
    </div>

    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/main.js"></script>

    @*Plugins*@
    <script src="~/Scripts/plugins/portfolio.jquery.js"></script>
    <script src="~/Scripts/plugins/bootstrap-select/bootstrap-select.min.js"></script>
    @*<script src="~/Scripts/plugins/plugins.js"></script>*@

    @RenderSection("scripts", required: false)
</body>
</html>
